@{
}

<div class="container d-flex justify-content-center">
    <div class="col-md-5">
        <form asp-controller="Account" asp-action="Register" method="post">
            <div class="form-group">
                <label for="name">Ad Soyad</label>
                <input required minLength="3" class="form-control" name="name" id="name" />
            </div>
            <div class="form-group mt-2">
                <label for="userName">Kullanıcı Adı</label>
                <input required minLength="3" class="form-control" name="userName" id="userName" />
            </div>
            <div class="form-group mt-2">
                <label for="email">Email</label>
                <input type="email" required email class="form-control" name="email" id="email" />
            </div>
            <div class="form-group mt-2">
                <label for="password">Şifre</label>
                <input type="password" required minlength="6" class="form-control" name="password" id="password" />
            </div>
            <div class="form-group mt-2">
                <button type="submit" class="btn btn-outline-success w-100">Kayıt Ol</button>
            </div>
        </form>
        @if (TempData["error"] != "" && TempData["error"] != null)
        {
            <p class="alert alert-danger mt-2">@TempData["error"]</p>
        }        
    </div>
</div>


