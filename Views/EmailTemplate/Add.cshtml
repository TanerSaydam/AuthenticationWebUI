@{
}

<script src="https://cdn.ckeditor.com/ckeditor5/36.0.1/classic/ckeditor.js"></script>

<div class="container d-flex justify-content-center">
    <div class="col-md-8">     
        <form asp-controller="EmailTemplate" asp-action="Add">
            <div class="form-group">
                <label for="title">Başlık</label>
                <input required minLength="3" class="form-control" name="title" id="title"/>
            </div>
            <div class="form-group mt-2">
                <label for="body">İçerik</label>
                <textarea id="editor" name="body" rows="10"></textarea>
                <script>
                        ClassicEditor
                                .create( document.querySelector( '#editor' ) )
                                .then( editor => {
                                        console.log( editor );
                                } )
                                .catch( error => {
                                        console.error( error );
                                } );
                </script>   
            </div>
            <div class="form-group mt-2">           
                <button class="btn btn-outline-primary w-100" onclick="add()">Kaydet</button>
            </div>
        </form>
        

        @if (TempData["error"] != "" && TempData["error"] != null)
        {
            <p class="alert alert-danger mt-2">@TempData["error"]</p>
        }
    </div>
</div>
